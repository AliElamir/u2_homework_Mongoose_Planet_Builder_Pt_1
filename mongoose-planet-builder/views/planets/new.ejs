<%- include('../partials/header') %>
  <h2>Enter a New Planet</h2>
  <form action="/planets" method="POST">
    <label>Planet name:
      <input type="text" name="name">
    </label><br>
    <label>numer of moons:
      <select name="numerofmoons">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
      </select>
    </label><br>
    <label>Fauna (separate fauna with commas):
      <input type="text" name="fauna">
    </label><br>
    <label>Is the planet populated?:
      <input type="checkbox" name="populated" checked>
    </label><br>
    <button type="submit">Add Planet</button>
  </form>
<%- include('../partials/footer') %>